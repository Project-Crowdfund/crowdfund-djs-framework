{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "sourceMap": true,
    "baseUrl": "./src/",
    "outDir": "dist/",
    "rootDir": "src/",
    "traceResolution": false,
    "moduleResolution": "NodeNext",
    "strict": true,
    "paths": {
      "@classes/*": ["./classes/*"], "@managers/*": ["./managers/*"]
    }
  },
  "exclude": ["node_modules", "out/"],
  "include": ["src/*", "src/**/*"]
}